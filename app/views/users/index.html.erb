<p id="notice"><%= notice %></p>

<div class="container">
  <h1><%= t('user_list') %></h1>

  <table class="table">
    <thead>
      <tr>
        <th><%= t('name') %></th>
        <th><%= t('mail') %></th>
        <th><%= t('birthdate') %></th>
        <th><%= t('password') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.birthday %></td>
          <td><%= user.password %></td>
          <td><%= link_to t('show'), user %></td>
          <td><%= link_to t('edit'), edit_user_path(user) %></td>
          <td><%= link_to t('delete'), user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= link_to t('user_new'), new_user_path %>
</div>
