
<div class="container">
	<h3><%= t('product_catalog') %></h3>


	<% @res.each do |product| %>

		<div class="panel panel-default">
			<div class="panel-heading"><%=product['name']%></div>
			<div class="panel-body">
				<div class="row">
					<div class="col-sm-4">
						<img src="<%=product['image_url__c']%>" style="height:200px;"/>
					</div>
					<div class="col-sm-8">
						<%=product['description__c']%>
						<div class="text-right" style="padding-top:10px;">
							<%=link_to t('add_to_cart'),  addtocart_path( product['id'] ), class:"btn btn-success"   %>
						</div>
					</div>
				</div>

			</div>
		</div>



	<% end %>






</div>
