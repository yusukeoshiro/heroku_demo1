	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

	<%= csrf_meta_tags %>
	<style>
		.navbar-brand {
			background: url(<%= getImageByCode("03") == false ? image_url('logo.png') : getImageByCode("03") %>) no-repeat left center;
			background-size: contain;
			height: 50px;
			width: 250px;
		}
	</style>
</head>
<body>
	<!-- Fixed navbar -->
	<nav class="navbar navbar-default navbar-static-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="/"></a>
			</div>
			<div id="navbar" class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li>
						<%=link_to root_path do%>
						<span class="glyphicon glyphicon-home" aria-hidden="true"></span> <%= t('menu_home') %>
						<% end %>
					</li>
<!--
					<li>
						<%=link_to users_path do%>
						<span class="glyphicon glyphicon-user" aria-hidden="true"></span> ユーザ
						<% end %>
					</li>
-->
					<li>
						<%=link_to products_path do%>
						<span class="glyphicon glyphicon-tag" aria-hidden="true"></span> <%= t('menu_product') %>
						<% end %>
					</li>
					<li>
						<%=link_to cart_path do%>
						<span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> <%= t('menu_cart') %>
						<% end %>
					</li>
					<li>
						<%=link_to userid_path do%>
						<span class="glyphicon glyphicon-qrcode" aria-hidden="true"></span> <%= t('menu_mobile_member_card') %>
						<% end %>
					</li>
					<li>
						<%=link_to coupons_path do%>
							<span class="glyphicon glyphicon-gift" aria-hidden="true"></span> <%= t('menu_coupon') %>
							<% if @has_new_coupons %>
								<span class="label label-danger label-as-badge"><%=@num_coupons%></span>
							<% end %>
						<% end %>
					</li>
					<li>
						<%=link_to stores_path do%>
						<span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span> <%= t('menu_nearby_shops') %>
						<% end %>
					</li>
		<!--
		            <li class="dropdown">
		              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
		              	<span class="glyphicon glyphicon-alert" aria-hidden="true"></span>
		              	Dropdown <span class="caret"></span>
		          	  </a>
		              <ul class="dropdown-menu">
		                <li><a href="#">StarAction</a></li>
		                <li><a href="#">Another action</a></li>
		                <li><a href="#">Something else here</a></li>
		                <li role="separator" class="divider"></li>
		                <li class="dropdown-header">Nav header</li>
		                <li><a href="#">Separated link</a></li>
		                <li><a href="#">One more separated link</a></li>
		              </ul>
		            </li>
		        -->
		        <li>
		        	<%=link_to logout_path do%>
		        	<span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> <%= t('menu_logout') %>
		        	<% end %>
		        </li>
		    </ul>
		</div><!--/.nav-collapse -->
	</div>
</nav>

<%= yield %>


<script type="text/javascript">
piAId = '70792';
